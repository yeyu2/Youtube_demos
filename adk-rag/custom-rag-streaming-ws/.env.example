# RAG Agent Environment Configuration
# Copy this to .env: cp .env.example .env

# =============================================================================
# Agent Configuration (for streaming conversations)
# =============================================================================
DEMO_AGENT_MODEL=gemini-2.0-flash-exp

# OPTION 1: Google AI Studio
GOOGLE_API_KEY=your-agent-api-key-here
GOOGLE_GENAI_USE_VERTEXAI=FALSE

# OPTION 2: Google Cloud Vertex AI
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_CLOUD_LOCATION=us-central1
# GOOGLE_GENAI_USE_VERTEXAI=TRUE

# =============================================================================
# File Search Configuration (for document search)
# =============================================================================
# If your documents are indexed under a different API key, set it here
# Leave blank to use the same key as GOOGLE_API_KEY
FILE_SEARCH_API_KEY=

# If you want to use a different key for file search, uncomment and set:
# FILE_SEARCH_API_KEY=your-file-search-api-key-here
